# http://editorconfig.org
root = true

[*]
indent_style = spaces
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{scss,styl,less}]
indent_style = spaces
indent_size = 2

[*.json]
indent_style = space
indent_size = 4

[{package.json,*.yml}]
indent_style = space
indent_size = 2

[{composer.json}]
indent_style = space
indent_size = 4
insert_final_newline = false

[*.md]
trim_trailing_whitespace = false
